<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/reviews_rv"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/reviews_error_message_tv"
        android:text="@string/reviews_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="@dimen/size_16_tx"/>

    <TextView
        android:id="@+id/no_reviews_message_tv"
        android:text="@string/no_reviews_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="@dimen/size_16_tx"/>

    <ProgressBar
        android:id="@+id/reviews_loading_indicator_pb"
        android:layout_width="@dimen/size_42"
        android:layout_height="@dimen/size_42"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
</RelativeLayout>
